{
	"name": "delta-controls",
	"version": "2.0.4",
	"description": "A 3D movement controller.",
	"homepage": "https://github.com/vanruesc/delta-controls",
	"main": "build/delta-controls.js",
	"module": "src/index.js",
	"sideEffects": false,
	"license": "Zlib",

	"keywords": [
		"movement",
		"translation",
		"rotation",
		"object",
		"controls",
		"keybindings",
		"3d"
	],

	"author": {
		"name": "Raoul van RÃ¼schen",
		"email": "vanruesc@outlook.de"
	},

	"repository": {
		"type": "git",
		"url": "https://github.com/vanruesc/delta-controls.git"
	},

	"bugs": {
		"url": "https://github.com/vanruesc/delta-controls/issues"
	},

	"files": [
		"src",
		"build"
	],

	"scripts": {
		"ava": "ava",
		"lint": "npm run lint:lib && npm run lint:demo && npm run lint:test",
		"lint:config": "eslint *.js",
		"lint:lib": "eslint src",
		"lint:demo": "eslint demo/src",
		"lint:test": "eslint test",
		"build": "rollup -c",
		"build:production": "cross-env NODE_ENV=production rollup -c",
		"doc": "esdoc",
		"deploy": "cpx demo/assets/** public/demo",
		"pretest": "npm run lint && npm run build:production",
		"test": "npm run ava",
		"prepack": "npm test"
	},

	"ava": {
		"failFast": true,
		"files": ["test/**/*.js"]
	},

	"eslintConfig": {
		"extends": "delta"
	},

	"peerDependencies": {
		"math-ds": ">= 1.0.0 < 2.0.0"
	},

	"devDependencies": {
		"@babel/core": "7.x.x",
		"@babel/preset-env": "7.x.x",
		"ava": "2.x.x",
		"cpx": "1.x.x",
		"cross-env": "5.x.x",
		"dat.gui": "0.x.x",
		"esdoc": "1.x.x",
		"esdoc-standard-plugin": "1.x.x",
		"eslint": "5.x.x",
		"eslint-config-delta": "0.x.x",
		"math-ds": "1.x.x",
		"rollup": "1.x.x",
		"rollup-plugin-babel": "4.x.x",
		"rollup-plugin-babel-minify": "8.x.x",
		"rollup-plugin-node-resolve": "5.x.x",
		"synthetic-event": "0.x.x",
		"three": "0.105.x",
		"three-demo": "3.x.x"
	}
}
